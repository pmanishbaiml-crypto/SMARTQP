# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# Google Cloud Credentials
# Path to your Firebase service account key JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/firebase-service-account-key.json

# Database Configuration
# These are usually the same as Firebase config above
DATABASE_URL=your_firestore_database_url

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5000
RATE_LIMIT_ENABLED=True
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# HOD Verification Codes (Change these in production!)
HOD_CS_CODE=HOD_CS_2024_SECURE_CHANGE_ME
HOD_ECE_CODE=HOD_ECE_2024_SECURE_CHANGE_ME
HOD_ME_CODE=HOD_ME_2024_SECURE_CHANGE_ME

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16  # MB
ALLOWED_EXTENSIONS=pdf,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=False

# Production Settings (Set these for production deployment)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=your_super_secure_production_secret_key
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# College Branding (Optional)
COLLEGE_NAME=Your College Name
COLLEGE_CODE=YCN
DEPARTMENT_NAME=Computer Science & Engineering
